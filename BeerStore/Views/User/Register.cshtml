
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
@model BeerStore.Models.User

<h2>Добавление телефона</h2>

<form asp-action="Register" asp-controller="User" asp-antiforgery="true" method="post" enctype="multipart/form-data">
    <div>
        <div>
            <label asp-for="Fullname"></label>
            <input type="text" asp-for="Fullname" />
        </div>
        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" />
        </div>
        <div>
            <label asp-for="Login"></label>
            <input asp-for="Login" />
        </div>
        <div>
            @*<label asp-for="avatar"></label>*@
            <input name="avatar" type="file"/>
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </div>
</form>