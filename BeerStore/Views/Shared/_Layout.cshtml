@using BeerStore.Models
@model ProductViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="icon" type="image/x-icon" href="~/beer_icon.ico">
</head>
<body>
    <!--меню-->
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div>
                <ul class="d-inline-block nav navbar-nav">
                    <li class="list-inline-item"><a href="~/Home/Index" class="navbar-brand">Home</a></li>
                    <li class="list-inline-item"><a href="~/Product/Beers" class="navbar-brand">Beers</a></li>
                    <li class="list-inline-item"><a href="~/Product/Create" class="navbar-brand">Add</a></li>
                    <li class="list-inline-item"><a href="~/User/Users" class="navbar-brand">Users</a></li>
                    <li class="list-inline-item"><a href="~/User/Register" class="navbar-brand">Register</a></li>
                </ul>
            </div>
            <form method="get" class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" name="toSearch" value="@Model.FilterModel.ToSearch" placeholder="Find beer" aria-label="Search">
                <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <!--основной контент-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>© 2020 - BeerStore</p>
        </footer>
    </div>
</body>
</html>